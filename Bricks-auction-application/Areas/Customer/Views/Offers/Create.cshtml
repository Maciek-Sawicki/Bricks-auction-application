@model Bricks_auction_application.Models.ViewModels.OfferVM

@{
    ViewData["Title"] = "Create Offer";
}

<h1>Create Offer</h1>

<h4>Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Offer.LEGOSetId" class="control-label"></label>
                <select asp-for="Offer.LEGOSetId" class="form-control" asp-items="ViewBag.LEGOSetId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Price" class="control-label"></label>
                <input asp-for="Offer.Price" class="form-control" />
                <span asp-validation-for="Offer.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.ShippingPrice" class="control-label"></label>
                <input asp-for="Offer.ShippingPrice" class="form-control" />
                <span asp-validation-for="Offer.ShippingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.OfferEndDateTime" class="control-label"></label>
                <input asp-for="Offer.OfferEndDateTime" class="form-control" />
                <span asp-validation-for="Offer.OfferEndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.ImagePath" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="Offer.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>

        <script type="text/javascript">
            $(function () {
                $("#Offer_LEGOSetId").chosen();
            });
        </script>
    
}
