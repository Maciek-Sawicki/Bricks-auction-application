@model Bricks_auction_application.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to Bricks Auction Platform</h2>

<h3>Categories</h3>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-3">
            <div class="card mb-3">
                <a  href="@Url.Action("Index", "Offers", new { categoryId = category.Id })">
                    <img class="card-img-top" src="@category.ImagePath" alt="@category.CategoryName" />
                    <div class="card-body">
                        <h5 class="card-title">@category.CategoryName</h5>
                    </div>
                </a>
            </div>
        </div>
    }
</div>


<h3>Offers</h3>
<div class="row">
    @foreach (var offer in Model.Offers)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@offer.LEGOSet.Name</h5>
                    <p class="card-text">@offer.User.Username</p>
                    <p class="card-text">Price: @offer.Price.ToString("C")</p>
                    <p class="card-text">Offer End Date: @offer.OfferEndDateTime.ToString("dd/MM/yyyy")</p>
                    <img src="@offer.ImagePath" class="img-fluid" />
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Details", "Offers", new { id = offer.OfferId })" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
