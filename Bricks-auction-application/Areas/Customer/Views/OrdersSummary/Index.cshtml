@model Bricks_auction_application.ViewModels.OrderSummaryViewModel

<h1>Podsumowanie zamówienia</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Zdjęcie</th>
                <th>Nazwa</th>
                <th>Numer katalogowy</th>
                <th>Cena</th>
                <th>Cena z wysyłką</th>
                <th>Czas zakończenia</th>
                <th>Sprzedający</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offer in Model.Offers)
            {
                <tr>
                    <td>
                        <img src="~/@offer.ImagePath" class="img-fluid" style="max-height: 100px;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => offer.LEGOSet.Name)</td>
                    <td>@Html.DisplayFor(modelItem => offer.LEGOSet.SetId)</td>
                    <td>@Html.DisplayFor(modelItem => offer.Price)</td>
                    <td>@Html.DisplayFor(modelItem => offer.ShippingPrice)</td>
                    <td>@Html.DisplayFor(modelItem => offer.OfferEndDateTime)</td>
                    <td>@Html.DisplayFor(modelItem => offer.User.Email)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    
        <h2 class="mt-5">Dane do wysyłki</h2>

        @* Formularz do wprowadzania danych wysyłki *@
        <form class="mt-3" method="post" asp-action="PlaceOrderAndSendEmail">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StreetAddress" class="form-label"></label>
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

    </div>

            <div class="row">
                <div class="col-md-6 offset-md-6 text-xl-end">
                    @* Wartości zamówienia *@
                    @{
                        decimal totalCartValue = Model.Offers.Sum(offer => offer.Price);
                        decimal totalCartValueWithShipping = Model.Offers.Sum(offer => offer.Price + offer.ShippingPrice);
                    }
                    <h4>Całkowita wartość zamówienia: @totalCartValue.ToString("C")</h4>
                    <h4>Całkowita wartość zamówienia z wysyłką: @totalCartValueWithShipping.ToString("C")</h4>
                    <button type="submit" class="btn btn-outline-dark mt-4">Złóż zamówienie</button>
                </div>
            </div>
        </form>
    
</div>
